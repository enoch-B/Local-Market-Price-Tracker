<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="match_parent"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <ImageView
            android:id="@+id/marketIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_store"
            app:tint="@color/primary"
            android:contentDescription="Market icon"/>

        <TextView
            android:id="@+id/marketName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Market Name"/> <TextView
            android:id="@+id/marketStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Open/Closed"/> <TextView
            android:id="@+id/marketDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:text="0.0 km"/> </LinearLayout>
</com.google.android.material.card.MaterialCardView>