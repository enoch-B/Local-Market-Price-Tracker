<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_btn_lightblue">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:background="@drawable/bg_glass_card"
            android:elevation="10dp">

            <ImageView
                android:src="@drawable/ic_market_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:contentDescription="@string/app_name"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txtWelcomeMessage"
                android:text="Welcome"
                android:textStyle="bold"
                android:textSize="26sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="28dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />

            <EditText
                android:id="@+id/etEmail"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:autofillHints="emailAddress"
                android:drawableStart="@drawable/ic_email"
                android:background="@drawable/bg_input_lightblue"
                android:padding="14dp"
                android:paddingStart="6dp"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#CC000000"
                android:textColorHint="#88000000"
                tools:ignore="HardcodedText" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <EditText
                    android:id="@+id/etPassword"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:autofillHints="password"
                    android:drawableStart="@drawable/ic_lock"
                    android:background="@drawable/bg_input_lightblue"
                    android:padding="14dp"
                    android:paddingStart="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#CC000000"
                    android:textColorHint="#88000000"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/togglePassword"
                    android:src="@drawable/ic_eye_toggle"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:tint="@android:color/black"
                    android:contentDescription="Toggle password visibility"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txtForgot"
                android:text="Forgot Password?"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                android:layout_gravity="end"
                android:textSize="14sp"
                android:clickable="true"
                android:focusable="true"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btnLogin"
                android:text="Login"
                android:minHeight="48dp"
                android:layout_marginTop="26dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_lightblue"
                android:textColor="@android:color/white"
                tools:ignore="HardcodedText" />

            <ProgressBar
                android:id="@+id/progressLogin"
                android:visibility="gone"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtSignup"
                android:text="Don't have an account? Sign up"
                android:textColor="@android:color/black"
                android:layout_marginTop="18dp"
                android:clickable="true"
                android:focusable="true"
                android:textSize="15sp"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
