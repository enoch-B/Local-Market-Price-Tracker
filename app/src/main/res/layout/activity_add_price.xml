<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F5F9F6">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit New Price"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2E3333"
        android:layout_marginBottom="24dp"/>

    <!-- NEW: Select Category Dropdown -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Select Category"
        app:boxStrokeColor="#66BB6A"
        app:boxStrokeWidthFocused="2dp"
        app:hintTextColor="#66BB6A"
        app:startIconDrawable="@android:drawable/ic_menu_sort_by_size"
        app:startIconTint="#66BB6A">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:textColor="#2E3333"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Select Product Dropdown -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Select Product"
        app:boxStrokeColor="#66BB6A"
        app:boxStrokeWidthFocused="2dp"
        app:hintTextColor="#66BB6A"
        app:startIconDrawable="@android:drawable/ic_menu_search"
        app:startIconTint="#66BB6A">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:textColor="#2E3333"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Price Input -->
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:hint="Price"
        app:boxStrokeColor="#66BB6A"
        app:boxStrokeWidthFocused="2dp"
        app:hintTextColor="#66BB6A"
        app:startIconDrawable="@android:drawable/ic_menu_my_calendar"
        app:startIconTint="#66BB6A">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textColor="#2E3333"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Submit Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Submit Price"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        app:backgroundTint="#66BB6A"
        app:cornerRadius="12dp"/>

</LinearLayout>
